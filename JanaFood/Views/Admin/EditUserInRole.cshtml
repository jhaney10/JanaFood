@model List<UserViewModel>
@{
    var errorMsg = ViewBag.ErrorMessage;
    var roleId = ViewBag.RoleId;
}
<h1>EditUserInRole View</h1>
<form method="post">
    <div class="card">
        <div class="card-header">
            Add or Remove Users From this Role
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                    </div>
                }
            }

        </div>
        <div>
            <button type="submit" class="btn btn-danger">Update</button>
        </div>

    </div>
</form>
