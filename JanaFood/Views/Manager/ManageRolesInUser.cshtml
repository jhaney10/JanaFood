@model List<ManageRolesViewModel>
@{
    var user = ViewBag.UserId;
}
<h1>Manage this User's Roles</h1>
<form method="post">
    <div class="card">
        <div class="card-header">
            Add or Remove Roles From this User
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                    </div>
                }
            }

        </div>
        <div>
            <button type="submit" class="btn btn-danger">Update</button>
        </div><br /><br />
        <div>
            <a asp-action="EditUser" asp-controller="Manager" asp-route-id="@user" class="btn btn-danger">BACK TO USER</a>
        </div>

    </div>
</form>
