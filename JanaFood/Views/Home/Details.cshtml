@model Food
@{
    var photo = Model.Picture??"no_image.png";

}
   
<div class="row my-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1>More Details</h1>
            </div>
            <div class="card-body">
                <img src="~/images/@photo" width="100" height="100"/>
                <h3>@Model.Name</h3>
                <p>@Model.Description</p>
                <p>@Model.Price</p>
                <a asp-action="Index" asp-controller="Home">Home</a>
            </div>
        </div>
    </div>
</div>
