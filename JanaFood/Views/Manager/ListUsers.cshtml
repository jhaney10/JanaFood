@model IEnumerable<AppUser>
@{ 
    ViewBag.Title = "All Users";
}
<div class="card">
    @if (Model.Any())
    {
    <h2>All Users</h2>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Create User</a>
        

        @foreach (var user in Model)
        {
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                User Name: @user.UserName
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-controller="Manager" asp-route-id="@user.Id" >
                    <a asp-controller="Manager" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-info">Edit User</a>
                    <button class="btn btn-danger">Delete User</button>
                </form>
            </div>
        }

    }
    else
    {
        <div class="card-header">
            No Roles
        </div>
        <div class="card-body">
            <h1>Create A New User</h1>
            <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-secondary">
                Create User
            </a>
        </div>
    }
</div>
